{
  "compilerOptions": {
    /* Base Options: */
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "target": "ES2017",

    /* Strictness */
    "skipLibCheck": true,
    "strict": true,

    /* Bundled projects */
    "declaration": false,
    "incremental": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowImportingTsExtensions": true,

    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },

    /* Types & Plugins */
    "types": [
      "vitest/globals"
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
