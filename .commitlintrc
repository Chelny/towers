{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "header-max-length": [
      2,
      "always",
      72
    ],
    "subject-case": [
      2,
      "always",
      [
        "lower-case",
        "sentence-case",
        "start-case",
        "pascal-case",
        "upper-case"
      ]
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}
